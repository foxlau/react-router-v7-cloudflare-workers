{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "include": ["app/**/*.js", "app/**/*.ts", "workers/**/*.ts"],
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": false
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "warn",
        "noParameterAssign": "off"
      },
      "correctness": {
        "noEmptyPattern": "off",
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn"
      }
    }
  }
}
